{
  "compilerOptions": {
    "target": "es2022",
    "module": "es2022",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "$amplify/*": [
        "../.amplify/generated/*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    ".amplify/generated/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    ".amplify/artifacts"
  ]
}